    </style>

    <style name="TextBoldGray2.Text18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBoldBlack.Text20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBoldGray2.Text20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBoldWhite.Text20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBoldBlack.Text22">
        <item name="android:textSize">22sp</item>
