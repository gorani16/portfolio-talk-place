<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ImageView Style -->
    <style name="Circle_10">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Circle_20">
        <item name="cornerSize">20%</item>
    </style>

    <style name="Circle_50">
        <item name="cornerSize">50%</item>
    </style>

    <!-- TextView Style -->
    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/font_jua</item>
    </style>

    <!-- Edit Text Style -->
    <style name="AuthEditText" parent="android:Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/font_ddangs</item>
    </style>

    <style name="PasswordEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/font_ddangs</item>
    </style>

    <style name="WriteComment">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_jua</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">20dp</item>
        <item name="android:hint">"댓글을 입력하세요."</item>
    </style>

    <style name="WriteEditTextTitle" parent="android:Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:fontFamily">@font/font_jua</item>
    </style>

    <style name="WriteEditTextContent" parent="android:Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:fontFamily">@font/font_jua</item>
    </style>

    <style name="InsideTextContent" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:fontFamily">@font/font_jua</item>
    </style>

    <!-- Text Style -->
    <style name="TextBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/font_jua</item>
    </style>

    <style name="TextWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_jua</item>
    </style>

    <style name="TextBlack.Text14">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text Bold Style -->

    <style name="TextBoldBlack">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/font_jua</item>
    </style>

    <style name="TextBoldGray2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:fontFamily">@font/font_jua</item>
    </style>

    <style name="TextBoldWhite">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_jua</item>
